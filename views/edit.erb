<div class="row">
  <div class="large-12 large-centered columns logo">
    4edit
  </div>
</div>

<% if flash[:notice] %>
  <h5><%= flash[:notice] %></h5>
<% end %>

<form name="batch_edit" action="/edit" method="post" accept-charset="utf-8">
  <div class="small-centered small-12 large-9 large-centered column">
    <div class="row">
      <div class="alert-box alert" id="error" style="display: none;">
      </div>
    </div>

    <div class="row">
      <h4>Select venue input method:</h4>
      <div class="switch large round large-12 large-centered columns">
        <input type="radio" name="venues[source]" id="switch_off" value="list">
        <label for="source_list" onclick="">Type in</label>
        <input type="radio" name="venues[source]" id="switch_on" value="page" checked>
        <label for="source_page" onclick="">Page ID</label>
        <span></span>
      </div>
    </div>
    <div class="row">
      <div class="large-12 columns" id="page_id_row">
        <label for="">Page ID (we will get all page's venues automatically for you)</label>
        <input type="text" name="venues[page_id]" id="page_id" value="" placeholder="8531311" />
      </div>
      <div class="large-12 columns" id="venue_list_row" hidden>
        <label for="">The list of venue IDs, separated by commas</label>
        <textarea rows="3" name="venues[venue_id]" id="venue_id" value=""
          placeholder="4b6fdde7f964a52065fe2ce3, 4bb62d376edc76b0e283301c"></textarea>
      </div>
    </div>
    <div class="row">
      <div>
        <h4>The information to change for all venues <small>(leave blank the fields you don't want to change):</small></h4>
      </div>
    </div>
    <div class="row">
      <div class="large-4 columns">
        <label>Name</label>
        <input type="text" name="data[name]" id="data name" value="" placeholder="Starbucks" />
      </div>
      <div class="large-4 columns">
        <label>Address</label>
        <input type="text" name="data[address]" id="data address" value="" placeholder="Av. Diagonal, 640" />
      </div>
      <div class="large-4 columns">
        <label>Cross street</label>
        <input type="text" name="data[crossStreet]" id="data crossStreet" value="" placeholder="Entença" />
      </div>
    </div>

    <div class="row">
      <div class="large-4 columns">
        <label>City</label>
        <input type="text" name="data[city]" id="data city" value="" placeholder="Barcelona" />
      </div>
      <div class="large-4 columns">
        <label>State</label>
        <input type="text" name="data[state]" id="data state" value="" placeholder="Barcelona" />
      </div>
      <div class="large-4 columns">
        <label>Zip code</label>
        <input type="text" name="data[zip]" id="data zip" value="" placeholder="08021" />
      </div>
    </div>

    <div class="row">
      <div class="large-4 columns">
        <label>Phone number</label>
        <input type="text" name="data[phone]" id="data phone" value="" placeholder="+34 935 21 92 01" />
      </div>
      <div class="large-4 columns">
        <label>Twitter</label>
        <input type="text" name="data[twitter]" id="data twitter" value="" placeholder="starbucks_es" />
      </div>
      <div class="large-4 columns">
        <label>Webpage</label>
        <input type="text" name="data[url]" id="data url" value="" placeholder="http://starbucksblog.es" />
      </div>
    </div>

    <div class="row">
      <div class="large-6 columns">
        <label>Venue category ID, separate multiple values with commas</label>
        <textarea rows="3" name="data[primaryCategoryId]" id="data primaryCategoryId" value=""
          placeholder="4bf58dd8d48988d1e0931735" /></textarea>
      </div>
      <div class="large-6 columns">
        <label>Description (up to 300 characters)</label>
        <textarea rows="3" name="data[description]" id="data description" value=""
          placeholder="Cada Latte, Cada Cappuccino…café 100% certificado de Comercio Justo."></textarea>
      </div>
    </div>
    <div class="row">
      <div class="large-12 columns">
        <input class="large button expand success" type="submit" id="submit" value="Edit 'em all!" />
      </div>
    </div>

    <%= erb(:form_validator) %>
  </div>
</form>
